<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/css/profile.css" type="text/css">
    <script src="/js/smoothScroll.js" type="text/javascript"></script>
    <link type="Image/x-icon" href="./img/Favicon.ico" rel="icon">
    <script src="/js/profileChangeInfo.js" type="text/javascript"></script>
</head>

<body>
    <header>
        <div class="logo">
            <a href="/">
                <span>G</span>enesis
            </a>
        </div>
        <div class="header_background" id="querySelectorByClass"></div>
        <details>
            <summary></summary>
            <nav class="menu">
                <a href="/">Home</a>
                <% try{%>
                    <% if (logged){%>
                        <a href="./profile">Profile</a>
                        <%} else{%>
                            <a href="./login">Sign In</a>
                            <%}%>
                                <%} catch{%>
                                    <a href="./login">Sign In</a>
                                    <%}%>
                                        <% if (user !==undefined && user.accountType>= 1) { %>
                                            <a href="./moderator_page">Moderation</a>
                                            <% } %>
                                                <a href="./catalog">Catalog</a>
                                                <% if (logged){%>
                                                    <a>
                                                        <form action="/logout?_method=DELETE" method="POST">
                                                            <button type="submit" class="exit_button">Exit</button>
                                                        </form>
                                                    </a>
                                                    <%} else{%>
                                                        <%}%>
            </nav>
        </details>
    </header>

    <!-- <%= user.email %>  -->
    <div class="profileMain">
        <div class="profileBlock">

            <div class="profileIMG">
                <img src="./img/BG1.png">
            </div>
            <div class="userInfo">
                <p>
                    <%= user.firstName %>
                </p>
                <p>
                    <%= user.lastName %>
                </p>
            </div>
            <div class="infoChange">
                <button onclick="ChangeEditProfileState(true, this)">Change data</button>
            </div>
            <div class="userStats">
                <div class="statsNaming">
                    <p>Date of registration</p>
                    <p>eMail</p>
                    <p>Password</p>
                </div>
                <div class="stats">
                    <p>
                        <%= user.created.toLocaleDateString('ru-RU') %>
                    </p>
                    <p id="pEmail">
                        <%= user.email %>
                    </p>
                    <p id="pPass">*******</p>

                    <input type="text" style="display: none;" id="inputEmail">
                    <input type="text" style="display: none;" id="inputPass">
                </div>
            </div>
            <form style="position: absolute; bottom: 20px;" action="/logout?_method=DELETE" method="POST" id="exitForm">
                <button class="exit">Exit</button>
            </form>
            <form style="position: absolute; bottom: 20px; display: none;" action="/save_profile_info" method="POST" id="saveForm">
                <button class="exit" onclick="SaveInfo()">Save</button>
                <input name="email" type="hidden" id="newEmail">
                <input name="password" type="hidden" id="newPass">
            </form>
        </div>
    </div>
    </div>

    </div>
</body>

</html>